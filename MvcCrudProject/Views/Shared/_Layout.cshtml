
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_Layout</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #333;
        }

        li {
            float: left;
        }

            li a {
                display: block;
                color: white;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
            }

                /* Change the link color to #111 (black) on hover */
                li a:hover {
                    background-color: #111;
                }
    </style>
</head>
<body>
    <ul>
        <li><a href="@Url.Action("Index", "Calisan")">Çalışanlar</a></li>
        <li><a href="@Url.Action("Index", "Departman")">Departmanlar</a></li>
        <li><a href="@Url.Action("Index", "Login")">Kullanıcı Listesi</a></li>
        <li><a href="@Url.Action("Kaydet", "Login")">Kayıt Ol</a></li>
    </ul>
    <div class="container">
        @RenderBody()
    </div>
    
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
